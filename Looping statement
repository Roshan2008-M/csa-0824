# Python program to generate a Pascal's triangle using nested loops
n=int(input("enter a number of rows:\n"))
for i in range(n):
  for j in range(n-i-1):
    print(" ",end="")
  num=1
  for k in range(i+1):
    print(num,end=" ")
    num=num*(i-k)//(k+1)
  print( )

# Python program to check if a given string is a palindrome or not using a for loop
s = input("Enter a string: ")

s = s.lower()      
length = len(s)
is_palindrome = True

for i in range(length // 2):
    if s[i] != s[length - 1 - i]:
        is_palindrome = False
        break

if is_palindrome:
    print("It is a palindrome.")
else:
    print("It is not a palindrome.")


# Python program to find the first n Fibonacci numbers using a for loop
n = int(input("Enter the number of Fibonacci numbers to generate: "))

a = 0
b = 1

print("Fibonacci sequence:")

for i in range(n):
    print(a, end=' ')
    temp = a + b
    a = b
    b = temp

# Python program to print the sum of digits of a given number using a while loop
num=int(input("enter a number"))
sum=0
temp=num
while temp>0:
    digit=temp%10
    sum+=digit
    temp=temp//10
    print("sum of the digit",sum)

# Python program to check if a given number is prime or not using a for loop
num = int(input("Enter a number: "))

if num <= 1:
    print(num, "is not a prime number")
else:
    is_prime = True
    for i in range(2, int(num ** 0.5) + 1):
        if num % i == 0:
            is_prime = False
            break

    if is_prime:
        print(num, "is a prime number")
    else:
        print(num, "is not a prime number")


#  Python program to find the GCD of two numbers using a for loop
n1=int(input("enter a first number:"))
n2=int(input("enter a second number:"))
x=n1
y=n2
while(n2!=0):
    t=n2
    n2=n1%n2
    n1=t
    gcd=n1
    print("gcd of{0}and{1}={2}".format(x,y,gcd))

 # Python program to find the sum of all the numbers in a list using a for loop

numbers = [10, 20, 30, 40, 50]
total = 0
for num in numbers:
    total += num
print("The sum of the numbers is:", total)

 # Python program to print the numbers from 1 to 10 using a for loop
n=int(input("enter a number:\n"))
for i in range(1,n):
  print(i)

#Python program to find the sum of all odd numbers between two given numbers using a while loop

start=int(input("enter a starting number:\n"))
end=int(input("enter a ending number:\n"))
sum_odd=0
current=start
while current<=end:
  if current%2!=0:
    sum_odd+=current
  current+=1
print("The sum of all odd numbers between", start, "and", end, "is:", sum_odd)

# Python program to generate a multiplication table using nested loops
num=int(input("enter a multiplication table :\n"))
for i in range(1,11):
  print(num,"x",i,"=",num*i)

# Python program to reverse a string using a for loop
org=input("enter a string:")
rev=""
for ch in org:
  rev=ch+rev
  print("reverse string:",rev)

# Python program to find the factorial of a number using a for loop
n=int(input("enter a number"))
fact=1
for i in range(1,n+1):
  fact=fact*i
  print("factorial of ",n,"is",fact)

# Python program to find the sum of all even numbers between two given numbers using a while loop
start=int(input("enter a starting number:"))
end=int(input("enter a ending number:"))
sum_even=0
if start%2==0:
  start+=1
while start<=end:
  sum_even+=start
  start+=2
  print("sum of even numbers=",sum_even)

 # Python program to count the number of vowels in a given string using a for loop
text= input("enter a string:")
vowels="aeiouAEIOU"
count=0
for ch in text:
  if ch in vowels:
    count+=1
print("number of vowels:",count)


#Python program to print all the prime numbers within a given range using a for loop

start=int(input("enter a starting number:"))
end=int(input("enter a ending number:"))
print("prime numbers between",start,"and",end,"are:")
for num in range(start,end+1):
  if num>1:
    for i in range(2,num):
      if num%i==0:
        break
      else:
        print(num)

# Python program to find the factorial of a number using a while loop
n=int(input("enter a number"))
fact=1
i=1
while i<=n:
  fact=fact*i
  i+=1
  print("factorial of ",n,"is",fact)

